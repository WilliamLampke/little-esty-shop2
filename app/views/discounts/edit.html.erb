<%= form_with url: "/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percentage, "Percentage (float)" %>
  <%= f.text_field :percentage, :value => @discount.percentage.to_s %>
  <%= f.label :quantity_threshold, "Quantity Threshold" %>
  <%= f.text_field :quantity_threshold, :value => @discount.quantity_threshold.to_s %>
  <%= f.submit "Submit" %>
<% end %>